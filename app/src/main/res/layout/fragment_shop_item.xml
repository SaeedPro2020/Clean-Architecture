<?xml version="1.0" encoding="utf-8"?>
<com.example.customcardview.MyCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/custom_cardShop_list"
    app:cardCornerRadius="5dp"
    app:normalCardElevation="10dp"
    app:pressedCardElevation="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageForList"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/page1"
            android:contentDescription="@string/image_item_shop_list" />

        <TextView
            android:id="@+id/itemForShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Name of Item"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textprice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemForShopping"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:text="12.0$"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/imageforRemove"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_cancel_24"
            android:contentDescription="@string/for_delete_occasions"
            android:gravity="top" />
        
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBoxItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_marginTop="20dp"
            android:layout_marginRight="3dp"
            android:checked="true"
          android:layout_below="@+id/imageforRemove"/>

    </RelativeLayout>

</com.example.customcardview.MyCardView>

